<mvc:View
    controllerName="sample.project1.controller.View3"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page3"
        title="Suppliers Page"
        showNavButton="true"
        navButtonPress="onNavBack"
        class="sapUiContentPadding"
    >
        <headerContent>
            <core:Fragment
                fragmentName="sample.project1.fragment.Navigation"
                type="XML"
            />
        </headerContent>

        <!-- Input Section -->
        <VBox class="formContainer">
            <Input
                placeholder="Name"
                width="100%"
                value="{userModel>/SupplierName}"
            />

            <Input
                placeholder="Street"
                width="100%"
                value="{userModel>/SupplierStreet}"
            />
            <Input
                placeholder="City"
                width="100%"
                value="{userModel>/SupplierCity}"
            />
            <Input
                placeholder="State"
                width="100%"
                value="{userModel>/SupplierState}"
            />
            <Input
                placeholder="ZipCode"
                width="100%"
                value="{userModel>/SupplierZipCode}"
            />
            <Input
                placeholder="Country"
                width="100%"
                value="{userModel>/SupplierCountry}"
            />

            <!-- Button Section -->
            <HBox
                class="buttonContainer"
                justifyContent="SpaceBetween"
            >
                <Button
                    text="Create"
                    type="Emphasized"
                    class="actionButton"
                    press="onCreate"
                />

                <Button
                    text="Update"
                    class="actionButton"
                    press="onUpdate"
                />

                <Button
                    text="Delete"
                    class="actionButton"
                    press="onDelete"
                />
            </HBox>
        </VBox>

        <List
            headerText="Suppliers"
            items="{/Suppliers}"
        >
            <StandardListItem
                title="{Name}"
                description="{Address/Street}|{Address/City}|{Address/State}|{Address/ZipCode}|{Address/Country}"
                type="Active"
                press="onSelection"
            />
        </List>
    </Page>
</mvc:View>
