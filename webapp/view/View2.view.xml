<mvc:View
    controllerName="sample.project1.controller.View2"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page2"
        title="Categories Page"
        showNavButton="true"
        navButtonPress="onNavBack"
        class="sapUiContentPadding"
    >
        <headerContent>
            <core:Fragment
                fragmentName="sample.project1.fragment.Navigation"
                type="XML"
            />
        </headerContent>

        <!-- Input Section -->
        <VBox class="formContainer">
            <Input
                placeholder="Name"
                width="100%"
                value="{userModel>/CategoriesName}"
            />

            <!-- Button Section -->
            <HBox
                class="buttonContainer"
                justifyContent="SpaceBetween"
            >
                <Button
                    text="Create"
                    type="Emphasized"
                    class="actionButton"
                    press="onCreate"
                />

                <Button
                    text="Update"
                    class="actionButton"
                    press="onUpdate"
                />

                <Button
                    text="Delete"
                    class="actionButton"
                    press="onDelete"
                />
            </HBox>
        </VBox>

        <List
            headerText="Categories"
            items="{/Categories}"
        >
            <StandardListItem
                title="{Name}"
                type="Active"
                press="onSelection"
            />
        </List>
    </Page>
</mvc:View>
