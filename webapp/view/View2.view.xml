<mvc:View
  controllerName="sample.project1.controller.View2"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:form="sap.ui.layout.form">

<Page title="Employee Details">

  <customHeader>
    <Bar>
      <contentLeft>
        <Button icon="sap-icon://nav-back" press="onNavBack"/>
      </contentLeft>

      <contentMiddle>
        <Title text="Employee Details"/>
      </contentMiddle>

      <contentRight>
        <Button
          text="Edit"
          type="Emphasized"
          visible="{= !${employeeModel>/editMode} }"
          press="onEdit"/>

        <Button
          text="Save"
          type="Accept"
          visible="{employeeModel>/editMode}"
          press="onSave"/>
      </contentRight>
    </Bar>
  </customHeader>

  <form:SimpleForm
    layout="ResponsiveGridLayout">

    <Label text="Name"/>
    <Input value="{employeeModel>Name}"
     enabled="{employeeModel>/editMode}"/>

    <Label text="Department"/>
    <Input value="{employeeModel>Dept}"
     enabled="{employeeModel>/editMode}"/>

    <Label text="Position"/>
    <Input value="{employeeModel>Position}"
     enabled="{employeeModel>/editMode}"/>

    <Label text="Salary"/>
    <Input value="{employeeModel>Salary}" type="Number"
     enabled="{employeeModel>/editMode}"/>

    <Label text="Phone"/>
    <Input value="{employeeModel>Phone}"
     enabled="{employeeModel>/editMode}"/>

  </form:SimpleForm>


  <HBox
    class="sapUiSmallMargin">

    <Title text="Projects" level="H4" class="sapUiSmallMarginEnd"/>

    <Button
      text="Add Project"
      icon="sap-icon://add"
      press="onAddProject"
      visible="{employeeModel>/editMode}"/>
  </HBox>

  <Table items="{employeeModel>Projects}">
    <columns>
      <Column><Text text="ID"/></Column>
      <Column><Text text="Name"/></Column>
      <Column><Text text="Start Date"/></Column>
      <Column><Text text="End Date"/></Column>
    </columns>

    <items>
      <ColumnListItem>
        <cells>
          <Text text="{employeeModel>ProjectID}"/>
          <Text text="{employeeModel>Name}"/>
          <Text text="{employeeModel>StartDate}"/>
          <Text text="{employeeModel>EndDate}"/>
        </cells>
      </ColumnListItem>
    </items>
  </Table>

</Page>

</mvc:View>
