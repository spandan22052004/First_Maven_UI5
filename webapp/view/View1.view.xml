<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="sample.project1.controller.View1">

    <Page
        title="Application Dashboard"
        titleAlignment="Center">

        <content>

            <VBox
                class="sapUiLargeMargin sapUiContentPadding"
                alignItems="Center"
                width="100%">

                <!-- ================= Accnt info (formatter) ================= -->
                <Panel
                    width="480px"
                    headerText="Account Information"
                    class="sapUiMediumMarginBottom">

                    <VBox class="sapUiMediumMargin">

                        <ObjectHeader
                            title="Account Status"
                            intro="Live Application Data"
                            icon="sap-icon://business-card"/>

                        <HBox
                            justifyContent="SpaceBetween"
                            alignItems="Center"
                            class="sapUiSmallMarginTop">
                            <Label text="Status" design="Bold"/>
                            <ObjectStatus
                                text="{ path: 'appModel>/status', formatter: '.formatter.statusText' }"
                                state="{ path: 'appModel>/status', formatter: '.formatter.statusState' }"/>
                        </HBox>

                        <HBox
                            justifyContent="SpaceBetween"
                            alignItems="Center"
                            class="sapUiSmallMarginTop">
                            <Label text="Amount" design="Bold"/>
                            <Text
                                text="{ path: 'appModel>/amount', formatter: '.formatter.amountFormat' }"/>
                        </HBox>

                        <Button
                            text="Show Status"
                            icon="sap-icon://message-popup"
                            type="Emphasized"
                            press="onShowStatus"
                            class="sapUiMediumMarginTop"
                            width="100%"/>
                    </VBox>
                </Panel>

                <!-- ================= Input using valuehelp ================= -->
                <Panel
                    width="480px"
                    headerText="Select &amp; Add Values">

                    <VBox class="sapUiMediumMargin">

                        <Label
                            text="Select Value"
                            design="Bold"
                            class="sapUiSmallMarginBottom"/>

                        <Input
                            id="myInput"
                            placeholder="Click value help"
                            showValueHelp="true"
                            valueHelpRequest="onValueHelp"/>

                        <Button
                            text="Add to Table"
                            icon="sap-icon://add"
                            type="Emphasized"
                            press="onAdd"
                            class="sapUiSmallMarginTop"/>

                        <Table
                            items="{appModel>/selected}"
                            class="sapUiMediumMarginTop"
                            inset="false">

                            <columns>
                                <Column>
                                    <Text text="Selected Values"/>
                                </Column>
                            </columns>

                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Text text="{appModel>name}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>

                        </Table>
                    </VBox>
                </Panel>

            </VBox>

        </content>
    </Page>
</mvc:View>
