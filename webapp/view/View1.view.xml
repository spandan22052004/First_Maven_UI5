<mvc:View
  controllerName="sample.project1.controller.View1"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns="sap.m">

  <Page title="Maventic Trainee Form">

    <!-- FORM -->
    <f:SimpleForm editable="true">

      <Label text="Name"/>
      <Input value="{formModel>/name}" />

      <Label text="Age"/>
      <Input value="{formModel>/age}" type="Number"/>

      <Label text="City"/>
      <Input value="{formModel>/city}" />

    </f:SimpleForm>

    <!-- BUTTONS -->
    <HBox justifyContent="Center" class="sapUiSmallMargin">
      <Button text="Add to Table" press=".onAddToTable"/>
      <Button text="Add to List" press=".onAddToList"
              class="sapUiTinyMarginBegin"/>
    </HBox>

    <!-- TABLE HEADING -->
    <Title text="Table Data" level="H2" class="sapUiSmallMarginTop"/>

    <!-- TABLE -->
    <Table items="{tableModel>/items}">
      <columns>
        <Column><Text text="Name"/></Column>
        <Column><Text text="Age"/></Column>
        <Column><Text text="City"/></Column>
      </columns>

      <items>
        <ColumnListItem>
          <cells>
            <Text text="{tableModel>name}"/>
            <Text text="{tableModel>age}"/>
            <Text text="{tableModel>city}"/>
          </cells>
        </ColumnListItem>
      </items>
    </Table>

    <!-- LIST HEADING -->
    <Title text="List Data" level="H2" class="sapUiSmallMarginTop"/>

    <!-- LIST -->
    <List items="{listModel>/items}">
      <StandardListItem
        title="{listModel>name}"
        description="Age: {listModel>age} | City: {listModel>city}" />
    </List>

  </Page>
</mvc:View>
