<mvc:View
    controllerName="sample.project1.controller.View1"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page title="Employees">
        <VBox class="sapUiMediumMargin">
            <SearchField
                placeholder="Search employee by name"
                liveChange="onSearch"
            />

            <Select change="onDeptFilter">
                <core:Item
                    key=""
                    text="All Departments"
                />
                <core:Item
                    key="IT"
                    text="IT"
                />
                <core:Item
                    key="HR"
                    text="HR"
                />
                <core:Item
                    key="Finance"
                    text="Finance"
                />
                <core:Item
                    key="Operations"
                    text="Operations"
                />
            </Select>

            <List
                id="empList"
                items="{employeeModel>/Employees}"
                mode="SingleSelectMaster"
                itemPress="onSelectEmployee"
            >
                <StandardListItem
                    title="{employeeModel>Name}"
                    description="{employeeModel>Dept}"
                    type="Navigation"
                />
            </List>
        </VBox>
    </Page>
</mvc:View>
