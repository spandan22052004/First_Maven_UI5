<mvc:View
    controllerName="sample.project1.controller.View1"
    xmlns="sap.m"
    xmlns:uxap="sap.uxap"
    xmlns:mvc="sap.ui.core.mvc">

    <Page
        id="page"
        title="{i18n>title}"
        class="sapUiContentPadding">

        <!-- Input Section -->
        <VBox class="formContainer">

            <Input
                placeholder="Name"
                width="100%" 
                value="{userModel>/ProductName}"/>

            <Input
                placeholder="Description"
                width="100%" 
                value="{userModel>/ProductDescription}"/>

            <!-- Button Section -->
            <HBox
                class="buttonContainer"
                justifyContent="SpaceBetween">

                <Button
                    text="Create"
                    type="Emphasized"
                    class="actionButton"
                    press="onCreate" />

                <Button
                    text="Update"
                    class="actionButton"
                    press="onUpdate" />

                <Button
                    text="Delete"
                    class="actionButton"
                    press="onDelete" />

            </HBox>
        </VBox>

        <List
            headerText="Products"
            items="{/Products}">

            <StandardListItem
                title="{Name}"
                description="{Description}"
                type="Active"
                press="onSelection" />
        </List>

    </Page>
</mvc:View>
