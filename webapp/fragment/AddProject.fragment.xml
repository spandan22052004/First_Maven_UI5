<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Dialog
    title="Add Project"
    draggable="true"
    resizable="true">

    <VBox class="sapUiSmallMargin">

      <Input placeholder="Project ID" value="{employeeModel>/newProject/ProjectID}"/>
      <Input placeholder="Project Name" value="{employeeModel>/newProject/Name}"/>

      <DatePicker
        placeholder="Start Date"
        value="{employeeModel>/newProject/StartDate}"/>

      <DatePicker
        placeholder="End Date"
        value="{employeeModel>/newProject/EndDate}"/>

    </VBox>

    <beginButton>
      <Button text="Save" press="onSaveProject"/>
    </beginButton>

    <endButton>
      <Button text="Cancel" press="onCancelProject"/>
    </endButton>

  </Dialog>

</core:FragmentDefinition>
